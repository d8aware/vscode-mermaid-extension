{
  "name": "vscode-mermaid-extension",
  "displayName": "MermaidDiagramView",
  "description": "View Mermaid diagrams from .mmd files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mmd"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mermaid-extension.showPreview",
        "title": "View Diagram"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == mmd",
          "command": "vscode-mermaid-extension.showPreview",
          "title": "View Diagram",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "mmd",
        "extensions": [
          ".mmd"
        ],
        "aliases": [
          "MMD",
          "mmd"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && npm run webpack",
    "compile": "tsc -p ./",
    "webpack": "npx webpack",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "serve": "npm run build && npm run open",
    "open": "npx http-server dist -o /index.html?diagram=seq-5.mmd"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "mermaid": "^10.9.1"
  }
}
